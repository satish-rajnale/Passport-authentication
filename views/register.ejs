<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h2>
            <%- include ("./partials/messages") %>
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control form-control-sm" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control form-control-sm" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control form-control-sm" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control form-control-sm" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    <div class="col-md-6 m-auto"><div class="card "><button type="submit" class="btn btn-info "> Register </button></div> </div>
                </form>
                <p class="lead mt-4">Have An Account?  <button type="button" class="btn btn-primary btn-sm" ><a href="/users/login">Login</a></button></p>
        </div>
    </div>
</div>